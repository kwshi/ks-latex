\NeedsTeXFormat{LaTeX2e}

\ProvidesPackage{ks-cs}[2022/01/27 cs stuff]

\RequirePackage{listings}
\lstset{
  columns=flexible,
  basicstyle=\small\ttfamily,
  commentstyle=\color{gray},
}

\RequirePackage[noEnd=false, indLines=true, rightComments=true]{algpseudocodex}
% https://tex.stackexchange.com/questions/150184/how-to-avoid-uppercase-function-name-while-using-function
\algrenewcommand\textproc{}
\algrenewcommand\algorithmicforall{\textbf{for each}}
\algrenewcommand\algorithmicrequire{\textbf{given:}}
\algrenewcommand\algorithmicensure{\textbf{assuming:}}
\newcommand\Given\Require
\newcommand\ForEach\ForAll
\newcommand\Assuming\Ensure

\RequirePackage[outputdir=_build]{minted}
\usemintedstyle{gruvbox-light}

\RequirePackage{tcolorbox}
\tcbuselibrary{minted}

\newmintinline[Ident]{text}{}
\newmintinline[Code]{text}{}
\newmintinline[Py]{python}{}
\newmintinline[Cpp]{cpp}{}
\newmintinline[Matlab]{matlab}{}

\newtcbinputlisting[auto counter]{\tcbinputminted}[2]{
  title={Program \thetcbcounter},
  listing file={#2},
  listing engine=minted,
  listing only,
  minted language={#1},
  theorem box,
  colback=green,
  colbacktitle=green,
  top=0em,
}
