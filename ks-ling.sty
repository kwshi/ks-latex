\RequirePackage{forest}
\useforestlibrary{edges}
\useforestlibrary{linguistics}
\forestset{
  default preamble={
    for tree={
      align=center,
      l sep=1em,
      s sep=3em/4,
      l=1em,
      inner ysep=1em/8,
      inner xsep=1em/4,
      text depth=1em/4,
      text height=3em/4,
      fit=band,
      parent anchor=south,
      child anchor=north,
    },
    baseline,
  },
  quote/.style={
    text height=3em/4,
    font=\rmfamily\itshape,
    l=0pt,
    no edge,
    for parent={l sep=0pt},
  },
  roof stem/.style={
    roof,
    inner xsep=0em,
    inner ysep=1em/8,
    l=1em,
    for parent={l sep=1em},
  },
  roof leaf/.style={append={[{\hphantom{#1}}, roof stem [{#1}, quote]]}},
  leaf/.style={append={[{#1}, quote]}},
}
