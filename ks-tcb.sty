\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{ks-tcb}[2023/06/17 tcb presets]

\RequirePackage{tcolorbox}
\tcbuselibrary{theorems}
\tcbuselibrary{breakable}
\tcbsetforeverylayer{
  common/.style={
      enhanced jigsaw,
      fonttitle=\bfseries,
      toptitle=1em/2,
      bottomtitle=1em/2,
      top=1em/2,
      bottom=3em/4,
      left=1em,
      right=1em,
      boxsep=0pt,
      titlerule=0pt,
      sharp corners,
      parbox=false,
      breakable,
    },
  outline box/.style={
      common,
      opacityback=0,
      boxrule=1pt/2,
      colframe=black,
      opacityframe=1/8,
      coltitle=black,
    },
  ks/named box/.style n args={3}{
      title={#1 \thetcbcounter},
      ks/name/.style={/tcb/title={#1 \thetcbcounter: ##1}},
      ks/label/.style={/tcb/.cd,label={#2:##1},/tcb/ks/.cd},
      /tcb/ks/.cd,
      #3,
      /tcb/.cd,
    },
}
