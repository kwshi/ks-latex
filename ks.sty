\RequirePackage{ks-diagram}

\RequirePackage{booktabs}
\RequirePackage{array}
\RequirePackage{tabu}

\RequirePackage[table]{xcolor}
\arrayrulecolor{gray}

\RequirePackage{wasysym}
\RequirePackage{textcomp}

\RequirePackage[inline]{enumitem}
\setlist{font=\color{gray!50!black}}
\setlist[enumerate]{leftmargin=2em}
\setlist[enumerate, 1]{label=[\arabic*]}
\setlist[enumerate, 2]{label=[\alph*]}
\setlist[enumerate, 3]{label=[\roman*]}
\setlist[itemize]{label=\textbullet, leftmargin=2em}

\RequirePackage{multicol}

\RequirePackage{tcolorbox}
\tcbuselibrary{skins}
\tcbuselibrary{breakable}
\tcbsetforeverylayer{
  no rules/.style={
      boxrule=0pt,
      opacityframe=0,
    },
  common/.style={
      enhanced jigsaw,
      fonttitle=\bfseries,
      toptitle=1em/2,
      bottomtitle=1em/2,
      top=1em/2,
      bottom=3em/4,
      left=1em,
      right=1em,
      boxsep=0pt,
      titlerule=0pt,
      sharp corners,
    },
  shade box/.style={
      boxrule=0pt,
      top=1em,
      bottom=1em,
      sharp corners,
      breakable,
      parbox=false,
      boxsep=0pt,
      opacityframe=0,
      opacityback=1/16,
      colback=#1,
    },
  theorem box/.style={
      common,
      colbacktitle=black,
      colframe=black,
      coltitle=black,
      colback=black,
      opacitybacktitle=1/8,
      opacityback=1/16,
      no rules,
    },
}

\newtcolorbox{annotation}{
  breakable,
  sharp corners,
  opacityframe=0,
  opacityback=0,
  boxsep=0pt,
  right=0em,
  left=2em,
  parbox=false,
}
\newtcolorbox{aside}{
  shade box=black,
  enhanced jigsaw,
  segmentation style={
      draw=black,
      solid,
      opacity=1/8,
      shorten > =1em,
      shorten < =1em,
    },
}
