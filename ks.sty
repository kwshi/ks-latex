\RequirePackage{multicol}

\RequirePackage{tcolorbox}
\tcbuselibrary{skins}
\tcbuselibrary{breakable}
\tcbsetforeverylayer{
  shade box/.style={
    boxrule=0pt,
    top=1em,
    bottom=1em,
    sharp corners,
    breakable,
    parbox=false,
    boxsep=0pt,
    opacityframe=0,
    opacityback=1/16,
    colback=#1,
  },
  theorem box/.style={
    enhanced jigsaw,
    sharp corners,
    colframe=#1,
    opacityback=0,
    fonttitle=\bfseries,
    boxrule=1pt/2,
    boxsep=1em/2,
    left=1em/2,
    top=0em,
    bottom=0em,
    separator sign={.},
    coltitle=black,
    parbox=false,
    breakable,
  },
}

\newtcolorbox{annotation}{
  breakable,
  sharp corners,
  opacityframe=0,
  opacityback=0,
  boxsep=0pt,
  right=0em,
  left=2em,
  parbox=false,
}
\newtcolorbox{aside}{
  shade box=black,
  enhanced jigsaw,
  segmentation style={
    draw=black,
    solid,
    opacity=1/8,
    shorten > =1em,
    shorten < =1em,
  },
}
